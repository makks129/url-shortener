{
	"compilerOptions": {
		"target": "ES2022",
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"esModuleInterop": true,
		"sourceMap": true,
		"outDir": "dist",
		"strict": true,
		"lib": ["ES2022"],
		"forceConsistentCasingInFileNames": true,
		"skipLibCheck": true,
		"resolveJsonModule": true,
		"isolatedModules": true
	},
	"include": ["src/**/*", "test/**/*", "jest.config.ts"],
	"exclude": ["node_modules", "dist"]
}
